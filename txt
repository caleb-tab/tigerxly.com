    <script src="js/canvas-stars.js"></script>
    <script>
        let isTheaterMode = false;
        let isFullscreen = false;

        function playVideo(button) {
            const container = button.parentElement;
            const iframe = container.querySelector('iframe');
            const pauseButton = container.querySelector('.pause-button');
            const allIframes = document.querySelectorAll('.iframe-container iframe');
            const allPlayButtons = document.querySelectorAll('.iframe-container .play-button');
            const allPauseButtons = document.querySelectorAll('.iframe-container .pause-button');
            const multiPlaySetting = document.getElementById('multiPlaySetting').checked;

            if (!multiPlaySetting) {
                allIframes.forEach(frame => {
                    frame.style.display = 'none';
                    frame.contentWindow.postMessage('{"event":"command","func":"pauseVideo","args":""}', '*');
                });
                allPlayButtons.forEach(btn => btn.style.display = 'flex');
                allPauseButtons.forEach(btn => btn.style.display = 'none');
            }

            iframe.style.display = 'block';
            button.style.display = 'none';
            pauseButton.style.display = 'flex';
            iframe.contentWindow.postMessage('{"event":"command","func":"playVideo","args":""}', '*');

            if (multiPlaySetting) {
                iframe.contentWindow.postMessage('{"event":"command","func":"mute","args":""}', '*');
            } else {
                iframe.contentWindow.postMessage('{"event":"command","func":"unMute","args":""}', '*');
            }
        }

        function pauseVideo(button) {
            const container = button.parentElement;
            const iframe = container.querySelector('iframe');
            const playButton = container.querySelector('.play-button');

            iframe.style.display = 'none';
            button.style.display = 'none';
            playButton.style.display = 'flex';
            iframe.contentWindow.postMessage('{"event":"command","func":"pauseVideo","args":""}', '*');
        }

        function toggleTheaterMode(button) {
            const container = button.parentElement;
            const iframe = container.querySelector('iframe');
            const allContainers = document.querySelectorAll('.iframe-container');

            if (isTheaterMode) {
                allContainers.forEach(cont => {
                    cont.style.width = '100%';
                    cont.style.paddingTop = '75%';
                });
                button.textContent = 'Theater';
                isTheaterMode = false;
            } else {
                allContainers.forEach(cont => {
                    cont.style.width = '100%';
                    cont.style.paddingTop = '75%';
                });
                container.style.width = '75vw';
                container.style.paddingTop = '56.25%';
                iframe.style.height = '100%';
                iframe.style.width = '100%';
                button.textContent = 'Normal';
                isTheaterMode = true;
            }
        }

        function toggleFullscreen() {
            const fullscreenContainer = document.getElementById('fullscreenContainer');
            const allIframes = document.querySelectorAll('.iframe-container iframe');

            if (isFullscreen) {
                fullscreenContainer.style.display = 'none';
                fullscreenContainer.innerHTML = '';
                isFullscreen = false;
            } else {
                fullscreenContainer.style.display = 'flex';
                allIframes.forEach(frame => {
                    const clone = frame.cloneNode(true);
                    clone.style.width = '45%';
                    clone.style.height = '45%';
                    clone.style.margin = '2%';
                    fullscreenContainer.appendChild(clone);
                });
                isFullscreen = true;
            }
        }
    </script>
